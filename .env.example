# Active Directory Web Server Configuration

# Server Configuration
PORT=8443
ENVIRONMENT=development

# Timeout settings (in seconds)
READ_TIMEOUT=60
WRITE_TIMEOUT=60
IDLE_TIMEOUT=60

# Active Directory Configuration
# Required: Server and Base DN for connection
AD_SERVER=your-ad-server.example.com
AD_PORT=389
AD_BASE_DN=dc=example,dc=com

# Security Configuration
# Set AD_USE_SSL=true for LDAPS (port 636)
# Set AD_SKIP_TLS=true to skip TLS verification (not recommended for production)
AD_USE_SSL=false
AD_SKIP_TLS=false

# Optional: Path to CA certificate for LDAPS
# AD_CA_CERT_PATH=/path/to/ca-cert.pem

# Search Configuration
AD_USER_FILTER=(objectClass=user)
AD_GROUP_FILTER=(objectClass=group)
AD_SEARCH_FILTER=(objectClass=*)

# TLS/HTTPS Configuration for the web server
# Set TLS_ENABLED=false to run HTTP instead of HTTPS
TLS_ENABLED=true
TLS_CERT_FILE=certs/server.crt
TLS_KEY_FILE=certs/server.key

# Logging
# LOG_LEVEL: debug, info, warn, error
LOG_LEVEL=info
# LOG_FORMAT: json or text (default: json)
LOG_FORMAT=json
